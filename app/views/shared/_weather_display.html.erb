<div class="row">
  <div class="col-md-6">
    <h6>Current Wave Conditions</h6>
    <p class="mb-1"><strong>Wave Height:</strong> <span data-weather="wave-height">--</span>m</p>
    <p class="mb-1"><strong>Wave Direction:</strong> <span data-weather="wave-direction">--</span></p>
    <p class="mb-1"><strong>Wave Period:</strong> <span data-weather="wave-period">--</span>s</p>
    <p class="mb-1"><strong>Today's Max:</strong> <span data-weather="max-wave">--</span>m</p>
  </div>
  <div class="col-md-6">
    <h6>Current Swell Conditions</h6>
    <p class="mb-1"><strong>Swell Height:</strong> <span data-weather="swell-height">--</span>m</p>
    <p class="mb-1"><strong>Swell Direction:</strong> <span data-weather="swell-direction">--</span></p>
    <p class="mb-1"><strong>Swell Period:</strong> <span data-weather="swell-period">--</span>s</p>
    <p class="mb-1"><strong>Today's Max Swell:</strong> <span data-weather="max-swell">--</span>m</p>
  </div>
</div>
<div style="margin-top: 1rem;">
  <%= render 'shared/forecast_grid' %>
</div>

<!-- save location AJAX form heart button and time update bottom left corner -->
<div class="mt-2" style="display: flex; justify-content: space-between; align-items: center;">
  <small class="text-muted col-6" style="align-self: center;">
    <i class="fas fa-clock"></i> Updated: <span data-weather="timestamp">--</span> (<span data-weather="timezone">--</span>)
  </small>
  <div class="button-container" data-controller="save-location">
    <!-- Hidden form data for AJAX submission -->
    <input type="hidden" id="location_latitude" />
    <input type="hidden" id="location_longitude" />
    <input type="hidden" id="location_break" />
    <input type="hidden" id="location_region" />
    <input type="hidden" id="location_country" />

    <div class="heart-save"
         data-save-location-target="button"
         data-current-user="<%= !current_user %>"
         data-action="click->save-location#saveLocation">
      <i class="far fa-heart"></i>
    </div>
  </div>
</div>
